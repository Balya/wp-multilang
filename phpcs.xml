<?xml version="1.0"?>
<ruleset name="qTranslate-Next">
  <description>Wordpress Coding Standards</description>

  <!-- Scan these files -->
  <file>qtranslate-next.php</file>
  <file>src</file>
  <file>templates</file>

  <!-- Show colors in console -->
  <arg value="-colors"/>

  <!-- Show sniff codes in all reports -->
  <arg value="s"/>

  <!-- Use PSR-2 as a base -->
  <rule ref="Wordpress-Next"/>

  <exclude-pattern>*/node_modules/*</exclude-pattern>
  <exclude-pattern>*/vendor/*</exclude-pattern>
</ruleset>
